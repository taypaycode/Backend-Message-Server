# MongoDB Atlas Connection String
# Replace the placeholders with your actual MongoDB Atlas credentials
MONGODB_URI=mongodb+srv://<USERNAME>:<PASSWORD>@<CLUSTER-URL>/messageDB?retryWrites=true&w=majority

# JWT Configuration
# Use a strong, random string for JWT_SECRET in production
JWT_SECRET=your_jwt_secret_key_here

# Environment (development, production, test)
NODE_ENV=development

# Port (default: 3000)
PORT=3000 